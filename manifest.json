{
   "manifest_version": 3,
   "name": "AssistEase",
   "version": "1.0",
   "description": "An accessibility extension to enhance web usability for motor-impaired users.",
   "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "https://www.instagram.com/*"
   ],
   "host_permissions": [
      "<all_urls>"
   ],
   "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
   },
   "background": {
      "service_worker": "background.js"
   },
   "content_scripts": [
      {
         "matches": [
            "<all_urls>"
         ],
         "js": [
            "content.js"
         ],
         "css": [
            "styles.css"
         ]
      }
   ],
   "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
   },
   "web_accessible_resources": [
      {
         "resources": [
            "sweetalert2.min.js",
            "sweetalert2.min.css"
         ],
         "matches": [
            "<all_urls>"
         ]
      }
   ]
}